


<div class="row">
	<div class="col-md-8 col-xs-12">
		<div class="card">
		  <div class="card-header">
		    <h2>Sign Up</h2>
		  </div>
		  <div class="card-block">
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			
		 	<% if devise_error_messages? %>
		 		<div class="alert alert-danger" role="alert">
		  			<%= devise_error_messages! %> 
				</div>
			<% end %>
			
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">User Name</label>
			  <div class="col-10">
			    <%= f.input :user_name, required: true, label:false, autofocus: true, hint: "Please make sure it is unique and w.o space" %>
			  </div>
			</div>
			
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">First Name</label>
			  <div class="col-10">
			    <%= f.input :first_name, required: true, label:false, autofocus: true %>
			  </div>
			</div>
			
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">Last Name</label>
			  <div class="col-10">
			    <%= f.input :last_name, required: true, label:false, autofocus: true %>
			  </div>
			</div>

			
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">Email</label>
			  <div class="col-10">
			    <%= f.input :email, required: true, label:false, autofocus: true %>
			  </div>
			</div>
			
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">Password</label>
			  <div class="col-10">
			   <%= f.input :password, required: true, label:false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
			  </div>
			</div>
			
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">Password</label>
			  <div class="col-10">
			   <%= f.input :password_confirmation, label:false, required: true %>
			  </div>
			</div>
			
			<div class="form-group row">
			 
			  <div class="col-6 offset-6">
			   <%= f.button :submit, "Sign up" %>
			  </div>
			</div>

			<% end %>
		  </div>
		</div>
	</div>
	<div class="col-md-4 col-xs-12">
		<%= render "devise/shared/links" %>
	
	</div>
</div>





