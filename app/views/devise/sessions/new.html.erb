


<div class="row">
	<div class="col-md-8 col-xs-12">
		<div class="card">
		  <div class="card-header">
		    <h2>Log in</h2>
		  </div>
		  <div class="card-block">
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">Email or Username</label>
			  <div class="col-10">
			    <%= f.input :login, required: true, label:false, autofocus: true %>
			  </div>
			</div>
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">Password</label>
			  <div class="col-10">
			   <%= f.input :password, label:false, required: true %>
			  </div>
			</div>
			<div class="form-group row">
			  <label for="example-text-input" class="col-2 col-form-label">Remember me</label>
			  <div class="col-10">
			   <%= f.input :remember_me, label:false, as: :boolean if devise_mapping.rememberable? %>
			  </div>
			</div>
			<div class="form-group row">
			 
			  <div class="col-6 offset-6">
			   <%= f.button :submit, "Log in" %>
			  </div>
			</div>

			<% end %>
		  </div>
		</div>
	</div>
	<div class="col-md-4 col-xs-12">
		<%= render "devise/shared/links" %>
	</div>
</div>





