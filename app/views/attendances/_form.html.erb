
<%= simple_form_for @attendance   do |f| %>
	<div class="form-group row">
		
	  <label for="example-datetime-local-input" class="col-2 col-form-label">User</label>
	  <div class="col-10">
	    <%= f.association :user, label_method: :full_name, label:false, value_method: :id, include_blank: false %>
	  </div>
	</div>
	<div class="form-group row">
	  <label for="example-date-input" class="col-2 col-form-label">Date</label>
	  <div class="col-10">
	     <%= f.input :for_date, label:false %>
	  </div>
	</div>
	<div class="form-group row">
	  <label for="example-month-input" class="col-2 col-form-label">Time</label>
	  <div class="col-10">
	    <%= f.input :in_time, label:false, as: :time %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-6 offset-4">
	    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
	  </div>
	</div>
  <% end %>