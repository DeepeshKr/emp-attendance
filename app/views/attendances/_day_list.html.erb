<div class="card">
  	<div class="card-header">
    	<h4><%= heading %> for <%= attendances.first.for_date.strftime("%d-%b-%y") %></h4>
  	</div>
  	<div class="card-block">
		<table class="table table-hover table-bordered">
		  <thead>
		    <tr>
		      <th>User</th>
		      <th>In time</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% attendances.each do |attendance| %>
		       <tr class="<%= attendance.on_time[0] %>">
		        <td><%= link_to attendance.user.full_name, attendance.user %></td>
		        <td><%= attendance.in_time.strftime("%H:%M %p ") %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div> 
</div> <!-- end of block-->